<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
>

	<description>用户类相关</description>

	<bean name="user user1 user2 user3" class="com.example.test.ch2.User"
		  init-method="changeInitParam" depends-on="people baseBean" autowire="byName">
		<property name="id" value="001"/>
		<property name="name" value="cp"/>
		<lookup-method name="lookupMethod" bean="userLookupMethod"/>
	</bean>


	<bean id="userLookupMethod" class="com.example.test.ch2.UserLookupMethodTest"/>

	<bean id="baseBean" factory-bean="baseBeanFactory" factory-method="generateBaseBean"/>
	<alias name="baseBean" alias="baseBean1"/>

	<bean id="baseBeanFactory" class="com.example.test.ch2.CustomBaseBeanFactory"/>

	<bean name="people" class="com.example.test.ch2.People"
	destroy-method="destroy" factory-method="generatePeopleObj" lazy-init="true" depends-on="baseBean"/>
</beans>
